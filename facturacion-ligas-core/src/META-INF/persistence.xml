<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="facturacion-ligas-core">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/facturacion-ligas-ds</jta-data-source>
		<class>ec.com.facturacion.ligas.dto.AuditoriaDTO</class>
		<class>ec.com.facturacion.ligas.dto.CatalagoValorDTO</class>
		<class>ec.com.facturacion.ligas.dto.CategoriaDTO</class>
		<class>ec.com.facturacion.ligas.dto.CuentaDTO</class>
		<class>ec.com.facturacion.ligas.dto.EgresoDTO</class>
		<class>ec.com.facturacion.ligas.dto.EquipoCategoriaDTO</class>
		<class>ec.com.facturacion.ligas.dto.EquipoDTO</class>
		<class>ec.com.facturacion.ligas.dto.IngresoDTO</class>
		<class>ec.com.facturacion.ligas.dto.OtroIngresoDTO</class>
		<class>ec.com.facturacion.ligas.dto.id.CatalogoValorID</class>
		<class>ec.com.facturacion.ligas.dto.id.EquipoCategoriaID</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
